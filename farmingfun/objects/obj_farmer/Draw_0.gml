//Customization Section
switch(spr_hats)
{
	case 0:
	draw_sprite(spr_hats, 0, x, y);
	break;
	case 1:
	draw_sprite(spr_hats, 1, x, y);
	break;
	case 2:
	draw_sprite(spr_hats, 2, x, y);
	break;
}

switch(spr_flannels)
{
	case 0:
	draw_sprite(spr_flannels, 0, x, y+60);
	break;
	case 1:
	draw_sprite(spr_flannels, 1, x, y+60);
	break;
	case 2:
	draw_sprite(spr_flannels, 2, x, y+60);
	break;
	case 3:
	draw_sprite(spr_flannels, 3, x, y+60);
	break;
}
switch(spr_pants)
{
	case 0:
	draw_sprite(spr_pants, 0, x, y+90);
	break;
	case 1:
	draw_sprite(spr_pants, 1, x, y+90);
	break;
	case 2:
	draw_sprite(spr_pants, 2, x, y+90);
	break;
}


